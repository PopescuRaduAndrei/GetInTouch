@model GetInTouch.Logic.ViewModels.Post.RestrictViewingViewModel
@using GetInTouch.Model

<input id="restrict-viewing-type-container" hidden asp-for="RestrictViewingType"/>
<input hidden asp-for="PostId"/>

<div class="mt-2 mb-2 ml-4">
    <div style="font-size: 20px; font-weight: 500;">Who can see this post?</div>

    <div class="mt-3 ml-3">
        <div class="d-flex mb-2">
            @if (Model.RestrictViewingType == RestrictViewingType.OnlyMe)
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-only-me" name="inputRadio" type="radio" checked class="mr-2 mt-1"/>
            }
            else
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-only-me" name="inputRadio" type="radio" class="mr-2 mt-1"/>
            }

            <div>Only me</div>
        </div>

        <div class="d-flex mb-2">
            @if (Model.RestrictViewingType == RestrictViewingType.OnlyCloseFriends)
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-only-close-friends" name="inputRadio" type="radio" checked class="mr-2 mt-1" />
            }
            else
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-only-close-friends" name="inputRadio" type="radio" class="mr-2 mt-1" />
            }

            <div>Only close friends</div>
        </div>

        <div class="d-flex mb-2">
            @if (Model.RestrictViewingType == RestrictViewingType.Everyone)
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-everyone" name="inputRadio" type="radio" checked class="mr-2 mt-1" />
            }
            else
            {
                <input onchange="setRestrictViewingType()" id="restrict-viewing-everyone" name="inputRadio" type="radio" class="mr-2 mt-1" />
            }

            <div>Everyone</div>
        </div>
    </div>
</div>