@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div style="padding-top: 4rem;">
    <form method="post">
        <div style="display: flex; flex-direction: column; flex: 1; align-items: center; justify-content: center; height: 75vh;">
            <div style="display: flex;">
                <div class="form-group" id="Container-FirstName">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" style="width: 17vw; margin-right: 1vw;" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-LastName">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" style="width: 17vw;"/>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="Container-Email">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="width: 35vw;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="form-group" id="Container-Password">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" style="width: 17vw; margin-right: 1vw;"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-ConfirmPassword">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" style="width: 17vw;"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group" id="Container-Email">
                    <label asp-for="Input.Year"></label>
                    <input asp-for="Input.Year" class="form-control" style="width: 11vw; margin-right: 1vw;" />
                    <span asp-validation-for="Input.Year" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-Email">
                    <label asp-for="Input.Month"></label>
                    <input asp-for="Input.Month" class="form-control" style="width: 11vw; margin-right: 1vw;" />
                    <span asp-validation-for="Input.Month" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-Email">
                    <label asp-for="Input.Day"></label>
                    <input asp-for="Input.Day" class="form-control" style="width: 11vw;" />
                    <span asp-validation-for="Input.Day" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn custom-button">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
